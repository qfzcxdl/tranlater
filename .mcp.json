{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "serena": {
      "command": "uvx",
      "args": ["--from", 
      "git+https://github.com/oraios/serena", 
      "serena", 
      "start-mcp-server",
      "--context",
      "claude-code",
      "--enable-web-dashboard",
      "false",
      "--project-from-cwd"
      ]
    }
  }
}